@model standcalcwaspnet.Models.LoginModel;
<style>
    p{
        background-color:red; 
    }
</style>
<script src="lib/jquery/jquery-3.6.3.js"></script>
@using (Html.BeginForm())
{
    <div class="input">
        <table>
            <tr>
                <td>
                    <p>@ViewBag.Sorry</p>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBoxFor(s=>s.user,new {@class = "textbox_inp" })
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Login" />
                </td>
            </tr>
        </table>
    </div>
}