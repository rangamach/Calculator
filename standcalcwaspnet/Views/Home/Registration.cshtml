@model standcalcwaspnet.Models.LoginModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<link href="~/css/site.css" rel="stylesheet"/>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <td><label>Username: </label></td>
            <td>@Html.TextBoxFor(un=>un.UserName)</td>
        </tr>
        <tr>
            <td><label>Password: </label></td>
            <td>@Html.TextBoxFor(pw=>pw.Password)</td>
        </tr>
        <tr>
            <td><input type="submit" value="Register" name="submitbtn" /></td>
        </tr>
        <tr>
            <td><p class="success">@ViewBag.Success</p></td>
        </tr>
        <tr>
            <td><input type="submit" value="Go Back" name="submitbtn" /></td>
        </tr>
    </table>
}